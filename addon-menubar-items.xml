<PropertyList>
    <meta>
        <file-type type="string">FlightGear add-on menu bar items</file-type>
        <format-version type="int">1</format-version>
    </meta>
    <menubar-items>
        <menu>
            <label>Aerotow Everywhere</label>
            <enabled type="bool">true</enabled>

            <item>
                <label>Aerotow Route...</label>
                <name>aerotow-everywhere-route-dialog</name>
                <binding>
                    <command>nasal</command>
                    <script>aerotowAddon.g_Aerotow.showRouteAerotowDialog();</script>
                </binding>
            </item>
            <item>
                <label>Towrope Configuration...</label>
                <name>aerotow-everywhere-towrope-dialog</name>
                <binding>
                    <command>nasal</command>
                    <script>aerotow.g_TowRopeConfigDialog.show();</script>
                </binding>
            </item>
            <item>
                <label>Call for Piper J3 Cub</label>
                <name>aerotow-everywhere-call-cub</name>
                <binding>
                    <command>property-assign</command>
                    <property>/addons/by-id/org.flightgear.addons.Aerotow/addon-devel/ai-model</property>
                    <value type="string">Cub</value>
                </binding>
            </item>
            <item>
                <label>Call for Robin DR400</label>
                <name>aerotow-everywhere-call-robin</name>
                <binding>
                    <command>property-assign</command>
                    <property>/addons/by-id/org.flightgear.addons.Aerotow/addon-devel/ai-model</property>
                    <value type="string">DR400</value>
                </binding>
            </item>
            <item>
                <label>Call for Cessna 182</label>
                <name>aerotow-everywhere-call-c182</name>
                <binding>
                    <command>property-assign</command>
                    <property>/addons/by-id/org.flightgear.addons.Aerotow/addon-devel/ai-model</property>
                    <value type="string">c182</value>
                </binding>
            </item>
            <item>
                <label>Call for Douglas C-47</label>
                <name>aerotow-everywhere-call-c47</name>
                <binding>
                    <command>property-assign</command>
                    <property>/addons/by-id/org.flightgear.addons.Aerotow/addon-devel/ai-model</property>
                    <value type="string">C47</value>
                </binding>
            </item>
            <item>
                <label>Call for Handley Page Halifax</label>
                <name>aerotow-everywhere-call-halifax</name>
                <binding>
                    <command>property-assign</command>
                    <property>/addons/by-id/org.flightgear.addons.Aerotow/addon-devel/ai-model</property>
                    <value type="string">Halifax</value>
                </binding>
            </item>
            <item>
                <label>Disable tow aircraft</label>
                <name>aerotow-everywhere-disable-aircraft</name>
                <binding>
                    <command>property-assign</command>
                    <property>/addons/by-id/org.flightgear.addons.Aerotow/addon-devel/sound/enable</property>
                    <value type="bool">false</value>
                </binding>
                <binding>
                    <command>nasal</command>
                    <script><![CDATA[
                        # Run stopAerotow() with a delay to ensure that the engine sound turns off
                        aerotowAddon.Timer.singleShot(1, aerotowAddon.g_Aerotow, func () {
                            aerotowAddon.g_Aerotow.stopAerotow();
                        });
                    ]]></script>
                </binding>
            </item>
            <item>
                <label>---------------------</label>
                <enabled>false</enabled>
            </item>
            <item>
                <label>Add thermal...</label>
                <name>aerotow-everywhere-add-thermal-dialog</name>
                <binding>
                    <command>nasal</command>
                    <script>aerotowAddon.g_AddThermalDialog.show();</script>
                </binding>
            </item>
            <item>
                <label>---------------------</label>
                <enabled>false</enabled>
            </item>
            <item>
                <label>Help...</label>
                <name>aerotow-everywhere-help-dialog</name>
                <binding>
                    <command>nasal</command>
                    <script>aerotowAddon.g_HelpDialog.show();</script>
                </binding>
            </item>
            <item>
                <label>About...</label>
                <name>aerotow-everywhere-about-dialog</name>
                <binding>
                    <command>nasal</command>
                    <script>aerotowAddon.g_AboutDialog.show();</script>
                </binding>
            </item>

            <!--
            FOR DEVELOPMENT ONLY!
            trigger reload of addon-main.nas
            1) This item should be REMOVED for release versions.
            2) replace addon ID to match your addon
            3) For convenience, you can use a .env file with DEV_MODE=true to
                enable this menu item, without the need to edit this file.
            -->
            <!-- <item>
                <label>Dev Reload</label>
                <binding>
                    <command>addon-reload</command>
                    <id>org.flightgear.addons.Aerotow</id>
                </binding>
            </item> -->

        </menu>
    </menubar-items>
</PropertyList>
