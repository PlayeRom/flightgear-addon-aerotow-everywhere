<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <description>Halifax</description>
  <path>halifax.ac</path>

  <offsets>
    <x-m>        0.0 </x-m>
    <y-m>        0.0 </y-m>
    <z-m>        2.1 </z-m>
    <pitch-deg> 11.8 </pitch-deg>
  </offsets>

  <sound>
    <path>AI/Aircraft/Aerotow/Halifax/Sound/sound.xml</path>
  </sound>

  <!-- Les hélices -->
  <animation>
    <name>HeliceCompleteGE</name>
    <object-name>propdiscGE</object-name>
    <object-name>propblurGE</object-name>
    <object-name>heliceGE</object-name>
    <object-name>bolGE</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdiscGE</object-name>
    <condition>
      <greater-than>
        <property>velocities/true-airspeed-kt</property>
        <value>60</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblurGE</object-name>
    <condition>
      <and>
        <greater-than>
          <property>velocities/true-airspeed-kt</property>
          <value>50</value>
        </greater-than>
        <less-than>
          <property>velocities/true-airspeed-kt</property>
          <value>60.001</value>
        </less-than>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>heliceGE</object-name>
    <condition>
      <less-than>
        <property>velocities/true-airspeed-kt</property>
        <value>60</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceCompleteGE</object-name>
    <property>velocities/true-airspeed-kt</property>
    <factor> 10 </factor>
    <center>
      <x-m> -5.520 </x-m>
      <y-m> -8.118 </y-m>
      <z-m>  0.443 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
