<PropertyList>
    <name>about-aerotow</name>
    <layout>vbox</layout>
    <width>400</width>

    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>1</stretch>
        </empty>
        <text>
            <label>About Aerotow Everywhere Add-on</label>
        </text>
        <empty>
            <stretch>1</stretch>
        </empty>
        <button>
            <legend>X</legend>
            <pref-width>20</pref-width>
            <pref-height>20</pref-height>
            <legend></legend>
            <key>Esc</key>
            <binding>
                <command>dialog-close</command>
            </binding>
        </button>
    </group>

    <hrule/>

    <text>
        <label>Aerotow Everywhere version 1.9.3 - September 25, 2025</label>
    </text>

    <text>
        <label>Written by Roman Ludwicki</label>
    </text>

    <button>
        <legend>Open the Repository Website</legend>
        <binding>
            <command>open-browser</command>
            <url>https://github.com/PlayeRom/flightgear-addon-aerotow-everywhere</url>
        </binding>
    </button>

    <hrule/>

    <button>
        <legend>Close</legend>
        <binding>
            <command>dialog-close</command>
        </binding>
    </button>
</PropertyList>
